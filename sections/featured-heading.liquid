{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{% assign font_heading 	= section.settings.font_heading | split: "|" %}
{%- style -%}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .bwp-widget-heading{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	#shopify-section-{{ section.id }} .bwp-widget-heading h2{
		{%- if section.settings.color_heading != blank -%}color: {{ section.settings.color_heading }};{%- endif -%}
		{%- if font_heading[0] != blank -%}font-size:{{ font_heading[0] }};{%- endif -%}
		{%- if section.settings.align_text != blank -%}text-align:{{ section.settings.align_text }};{%- endif -%}
	}
	{%- if margin[1] != blank or padding[1] != blank  or font_heading[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[1] != blank -%}font-size:{{ font_heading[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank or font_heading[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[2] != blank -%}font-size:{{ font_heading[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank or font_heading[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[3] != blank -%}font-size:{{ font_heading[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
{%- endstyle -%}

<section class="wpbingo-section bwp-widget-heading wpbingo-section--{{ section.id }} overflow-hidden">
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner">
			<div class="wpbingo-section__content">
				<h2>{{ section.settings.heading }}</h2>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
	"name": "Wpbingo Heading",
	"class": "wpbingo-framework",
	"settings": [
		{
			"type": "header",
			"content": "Layout settings"
		},
		{
			"type": "text",
			"id": "max_width",
			"label": "Width container",
			"info": "Default: 1440px"
		},
		{
			"type": "checkbox",
			"id": "fullwidth",
			"label": "Fullwidth"
		},
		{
			"type": "text",
			"id": "padding",
			"label": "Padding",
			"placeholder": "0px 0px 0px 0px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "text",
			"id": "margin",
			"label": "Margin",
			"placeholder": "0px 0px 0px 0px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "header",
			"content": "General Settings"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Heading"
		},
		{
			"type": "color",
			"id": "color_heading",
			"label": "Color Heading",
			"default": "#000000"
		},
		{
			"type": "text",
			"id": "font_heading",
			"label": "Font size Heading",
			"default": "25px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "select",
			"id": "align_text",
			"label": "Text align",
			"default": "left",
			"options": [
				{
					"value": "center",
					"label": "Center"
				},
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "right",
					"label": "Right"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Wpbingo Heading",
			"category": "3. Wpbingo Heading"
		}
	]
}
{% endschema %}
