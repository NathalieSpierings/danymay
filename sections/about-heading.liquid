{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign bg_setting = '' -%}
{%- if section.settings.bg_image != blank -%}
	{%- capture bg_setting -%}
		background-position:{{ section.settings.bg_position }};background-size:{{ section.settings.bg_size }};
		{%- if section.settings.bg_fixed != blank -%}
			background-attachment: fixed;
		{%- endif -%}
	{%- endcapture -%}
{%- endif -%}

{%- assign bg_full = '' -%}
{%- if section.settings.bg_image != blank and section.settings.bg_width == 'full' -%}
	{%- capture bg_full -%}
		style="background-image: url('{{ section.settings.bg_image | img_url: ''}}');{{ bg_setting }}"
	{%- endcapture -%}
{%- endif -%}

{%- assign bg_content = '' -%}
{%- if section.settings.bg_image != blank and section.settings.bg_width == 'content' -%}
	{%- capture bg_content -%}
		style="background-image: url('{{ section.settings.bg_image | img_url: ''}}');{{ bg_setting }}"
	{%- endcapture -%}
{%- endif -%}

{% assign margin 	= section.settings.margin | split: "|" %}
{% assign padding 	= section.settings.padding | split: "|" %}
{% assign font_heading 	= section.settings.font_heading | split: "|" %}
{% assign font_subheading 	= section.settings.font_subheading | split: "|" %}
{%- style -%}
	{%- if margin[0] != blank or padding[0] != blank or section.settings.align_text != blank -%}
		#shopify-section-{{ section.id }} .bwp-widget-heading{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
			{%- if section.settings.align_text != blank -%}text-align:{{ section.settings.align_text }};{%- endif -%}
		}
	{%- endif -%}
	#shopify-section-{{ section.id }} .bwp-widget-heading h2{
		{%- if section.settings.color_heading != blank -%}color: {{ section.settings.color_heading }};{%- endif -%}
		{%- if font_heading[0] != blank -%}font-size:{{ font_heading[0] }};{%- endif -%}
	}
	#shopify-section-{{ section.id }} .bwp-widget-heading .sub-title{
		{%- if section.settings.color_subheading != blank -%}color: {{ section.settings.color_subheading }};{%- endif -%}
		{%- if font_subheading[0] != blank -%}font-size:{{ font_subheading[0] }};{%- endif -%}
	}
	{%- if margin[1] != blank or padding[1] != blank  or font_heading[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[1] != blank -%}font-size:{{ font_heading[1] }};{%- endif -%}
			}
			{%- if font_subheading[1] != blank -%}
				#shopify-section-{{ section.id }} .bwp-widget-heading .sub-title{
					{%- if font_subheading[1] != blank -%}font-size:{{ font_subheading[1] }};{%- endif -%}
				}
			{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank or font_heading[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[2] != blank -%}font-size:{{ font_heading[2] }};{%- endif -%}
			}
			{%- if font_subheading[2] != blank -%}
				#shopify-section-{{ section.id }} .bwp-widget-heading .sub-title{
					{%- if font_subheading[2] != blank -%}font-size:{{ font_subheading[2] }};{%- endif -%}
				}
			{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank or font_heading[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .bwp-widget-heading{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
			#shopify-section-{{ section.id }} .bwp-widget-heading h2{
				{%- if font_heading[3] != blank -%}font-size:{{ font_heading[3] }};{%- endif -%}
			}
			{%- if font_subheading[3] != blank -%}
				#shopify-section-{{ section.id }} .bwp-widget-heading .sub-title{
					{%- if font_subheading[3] != blank -%}font-size:{{ font_subheading[3] }};{%- endif -%}
				}
			{%- endif -%}
		}
	{%- endif -%}
{%- endstyle -%}

{%- if section.settings.show -%}
<section class="wpbingo-section bwp-widget-heading wpbingo-section--{{ section.id }} overflow-hidden" {{ bg_full }}>
	<div class="{{ container }}" {{ max_width }}>
		<div class="wpbingo-section__inner" {{ bg_content }}>
			<div class="wpbingo-section__content">
				<h2>{{ section.settings.heading }}</h2>
				<div class="sub-title">{{ section.settings.sub_heading }}</div>
			</div>
		</div>
	</div>
</section>
{%- endif -%}

{% schema %}
{
	"name": "Wpbingo About Heading",
	"class": "wpbingo-framework",
	"settings": [
		{
			"type": "header",
			"content": "Layout settings"
		},
		{
			"type": "checkbox",
			"id": "show",
			"label": "Show Heading",
			"default": true
		},
		{
			"type": "image_picker",
			"id": "bg_image",
			"label": "Background Image"
		},
		{
			"type": "checkbox",
			"id": "bg_fixed",
			"label": "Background Fixed"
		},
		{
			"type": "text",
			"id": "bg_position",
			"label": "Background position",
			"default": "center"
		},
		{
			"type": "text",
			"id": "bg_size",
			"label": "Background size",
			"default": "cover"
		},
		{
			"type": "select",
			"id": "bg_width",
			"label": "Background Width",
			"options": [
				{
					"value": "full",
					"label": "Full"
				},
				{
					"value": "content",
					"label": "Content"
				}
			],
			"default": "full"
		},
		{
			"type": "text",
			"id": "max_width",
			"label": "Width container",
			"info": "Default: 1440px"
		},
		{
			"type": "checkbox",
			"id": "fullwidth",
			"label": "Fullwidth"
		},
		{
			"type": "text",
			"id": "padding",
			"label": "Padding",
			"placeholder": "0px 0px 0px 0px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "text",
			"id": "margin",
			"label": "Margin",
			"placeholder": "0px 0px 0px 0px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "header",
			"content": "General Settings"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "Heading"
		},
		{
			"type": "color",
			"id": "color_heading",
			"label": "Color Heading",
			"default": "#000000"
		},
		{
			"type": "text",
			"id": "font_heading",
			"label": "Font size Heading",
			"default": "25px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "text",
			"id": "sub_heading",
			"label": "Sub Heading",
			"default": "Sub Heading"
		},
		{
			"type": "color",
			"id": "color_subheading",
			"label": "Color sub Heading",
			"default": "#000000"
		},
		{
			"type": "text",
			"id": "font_subheading",
			"label": "Font size sub Heading",
			"default": "25px",
			"info":"Screen: desktop | 1200px | 991px | 767px"
		},
		{
			"type": "select",
			"id": "align_text",
			"label": "Text align",
			"default": "left",
			"options": [
				{
					"value": "center",
					"label": "Center"
				},
				{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "right",
					"label": "Right"
				}
			]
		}
	]
}
{% endschema %}
