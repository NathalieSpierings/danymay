{% assign layout = section.settings.header_layout | strip %}

<div class="header__action" data-toggle="search-panel">
  <svg class="svg-icon">
    <use xlink:href="#svg-search"></use>
  </svg>
</div>




<div id="search">    
  <div class="search-panel">
    <div class="search-panel__content">  

      <div class="search-panel__header">
        <h3 class="search-panel__header__title"> {{ section.settings.search__title }}</h3>
        <div class="dismiss" data-dismiss="search-panel"></div>
      </div>
      <div class="center center--slim">
        <div class="search-panel__form">

          <input type="text" 
               name="q" 
               id="text-search" 
               value="{{ search.terms | escape }}" 
               placeholder="{{ 'layout.search_bar.placeholder' | t }}" 
                class="search-panel__input"  aria-label="{{ 'layout.search_bar.placeholder' | t }}"
               />
        

          <button type="submit" class="search-panel__button">    
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 400 400"
                 height="24"
                 width="24">
              <g transform="matrix(1.3333333,0,0,-1.3333333,0,400)" id="g10">
                <g transform="scale(0.1)" id="g12">
                  <path id="path14" 
                        style="fill-opacity:1;fill-rule:nonzero;stroke:none" 
                        d="m 1312.7,795.5 c -472.7,0 -857.204,384.3 -857.204,856.7 0,472.7 384.504,857.2 857.204,857.2 472.7,0 857.3,-384.5 857.3,-857.2 0,-472.4 -384.6,-856.7 -857.3,-856.7 z M 2783.9,352.699 2172.7,963.898 c 155.8,194.702 241.5,438.602 241.5,688.302 0,607.3 -494.1,1101.4 -1101.5,1101.4 -607.302,0 -1101.399,-494.1 -1101.399,-1101.4 0,-607.4 494.097,-1101.501 1101.399,-1101.501 249.8,0 493.5,85.5 687.7,241 L 2611.7,181 c 23,-23 53.6,-35.699 86.1,-35.699 32.4,0 63,12.699 86,35.699 23.1,22.801 35.8,53.301 35.8,85.898 0,32.602 -12.7,63 -35.7,85.801"></path>
                </g>			  	
              </g>	
            </svg>

          </button>

        </div>
      </div>
    </div>
    <div class="search-panel__overlay"></div>
  </div>
</div>


<script>
  $(function(){
  
  // Toggle search
$('[data-toggle="search-panel"]').on('click', function(){
  $('.search-panel__content').addClass('shown');
  $('.search-panel__overlay').addClass('shown');
  $('#text-search').focus();  
});
$('[data-dismiss="search-panel"]').on('click', function(){
  $('.search-panel__content').removeClass('shown');
  $('.search-panel__overlay').removeClass('shown');
});

  });
</script>