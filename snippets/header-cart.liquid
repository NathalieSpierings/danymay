            </svg>
          </div>
          <div class="basket__empty__title">{{ 'cart.general.no_items' | t }}</div>
          <a href="/">
            <span>{{ 'cart.general.start_shopping' | t }}</span><svg>
            <use xlink:href="#svg-down"></use>
            </svg>
          </a>
        </div>
      </div>
  
      {% else %}
  
      <div class="basket__body">
       
        <div class="cart-items">
          <ul>
            {% for item in cart.items %}
            
            <li class="cart-item ">
              <div class="cart-item__image">
                <img src="{{ item | img_url: '80x80' }}" alt="{{ item.title | escape }}">
              </div>
              <div class="cart-item__title">
                <div>
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </div>
                <a href="javascript:void(0)" 
                   onclick="cart.remove('{{ item.variant_id }}');"  
                   data-id="{{ item.variant_id }}" 
                   data-action="remove" class="cart-item__remove" 
                   title="Remove from cart">{{ 'cart.general.remove'| t }}</a>
              </div>
              <div class="cart-item__cost">
                <span>{{ item.quantity }}</span> x <span>{{ item.line_price | money }}</span>
              </div>
            </li>
            
            {% endfor %}
          </ul>
        </div>
        
      </div>
  
      <div class="basket__footer">
        <div class="basket__subtotal">
          <div class="basket__line">
            <span>{{ 'cart.general.heading_subtotal' | t }}</span>
            <span class="basket__price">€199</span>
          </div>
          
          <!--
          <div class="basket__line">
          <span>{{ 'cart.general.heading_shipping' | t }}</span>
          <span>{{ 'cart.general.heading_shipping' | t }}</span>
          </div>
          -->
          
        </div>
        <div class="basket__total">
          <div class="basket__line">
            <span>{{ 'cart.general.heading_total' | t }}:</span>
            <span class="basket__price">€199</span>
          </div>
        </div>
  
        <div class="basket__checkout">
          <a href="javascript:" class="btn btn-secondary fluid">
            {{ 'cart.general.proceed_checkout' | t }}
          </a>
        </div>
  
      </div>
      {% endif %} 
      
    </div>
  </div>
  
  
  <script >
    $(document).ready(function () {
      
      // Basket
      $('[data-trigger="basket"]').on('click', function () {
        $('.basket').addClass('shown');
      });
      
      $('[data-dismiss="basket"]').on('click', function () {
        $('.basket').removeClass('shown');
      });
  
    });
  </script>
  
  
