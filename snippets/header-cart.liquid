<div class="header__action" data-trigger="basket">
    <svg class="svg-icon">
      <use xlink:href="#svg-cart"></use>
    </svg>
    <span class="basket__count">{{ cart.item_count }}</span>
  </div>
  
  <!--Basket  -->
  <div class="basket">
    <div class="basket__overlay js-close-cartbox"></div>
    <div class="basket__content">										
      <div class="basket__header">
        <div class="basket__header__title">{{ 'cart.general.title' | t }}</div> 
        <div class="dismiss" data-dismiss="basket"></div>
      </div>
  
      {% if cart.item_count < 1 %} 
      
  
      <div class="basket__empty">
        <div class="basket__empty__container">
          <div class="basket__empty__icon">
            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="48px" height="48px" 
                 viewBox="0 0 458.823 458.823" 
                 xml:space="preserve">
