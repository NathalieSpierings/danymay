<li class="main-menu__nav-item menu-dropdown menu-dropdown--mega{% if menu_link.active %} active{% endif %}">
	<a href="{{ menu_link.url }}" title="{{ menu_link.title | escape }}">{{ menu_link.title }}</a>
	<div class="menu-dropdown__content menu-dropdown__content--megamenu">
		<div class="menu-row">
			{%- if block.settings.menu1 -%}
				<div class="menu-row__col menu-row__col--{{ block.settings.menu_col_1 }}">
					{%- assign menu_heading_1 = block.settings.menu_heading_1 -%}
					{%- assign menu_link_list_1 = block.settings.menu_link_list_1 -%}
					<div class="megamenu-products">
						{%- if menu_heading_1 != blank -%}
							<div class="megamenu-products__heading megamenu-heading"><span>{{ menu_heading_1 }}</span></div>
						{%- endif -%}
						{%- if menu_link_list_1 != blank -%}
						<ul class="menu-list">
							{% for link in linklists[menu_link_list_1].links %}
								<li class="footer-menu__item">
									<a class="footer-menu__link" href="{{ link.url }}" title="{{ link.title | escape }}">{{ link.title }}</a>
								</li>
							{% endfor %}
						</ul>
						{%- endif -%}
					</div>
				</div>
			{%- endif -%}
			{%- if block.settings.menu2 -%}
				<div class="menu-row__col menu-row__col--{{ block.settings.menu_col_2 }}">
					{%- assign menu_heading_2 = block.settings.menu_heading_2 -%}
					{%- assign menu_link_list_2 = block.settings.menu_link_list_2 -%}
					<div class="megamenu-products">
						{%- if menu_heading_2 != blank -%}
							<div class="megamenu-products__heading megamenu-heading"><span>{{ menu_heading_2 }}</span></div>
						{%- endif -%}
						{%- if menu_link_list_2 != blank -%}
						<ul class="menu-list">
							{% for link in linklists[menu_link_list_2].links %}
								<li class="footer-menu__item">
									<a class="footer-menu__link" href="{{ link.url }}" title="{{ link.title | escape }}">{{ link.title }}</a>
								</li>
							{% endfor %}
						</ul>
						{%- endif -%}
					</div>
				</div>
			{%- endif -%}
			{%- if block.settings.menu3 -%}
				<div class="menu-row__col menu-row__col--{{ block.settings.menu_col_3 }}">
					{%- assign menu_heading_3 = block.settings.menu_heading_3 -%}
					{%- assign menu_link_list_3 = block.settings.menu_link_list_3 -%}
					<div class="megamenu-products">
						{%- if menu_heading_3 != blank -%}
							<div class="megamenu-products__heading megamenu-heading"><span>{{ menu_heading_3 }}</span></div>
						{%- endif -%}
						{%- if menu_link_list_3 != blank -%}
						<ul class="menu-list">
							{% for link in linklists[menu_link_list_3].links %}
								<li class="footer-menu__item">
									<a class="footer-menu__link" href="{{ link.url }}" title="{{ link.title | escape }}">{{ link.title }}</a>
								</li>
							{% endfor %}
						</ul>
						{%- endif -%}
					</div>
				</div>
			{%- endif -%}
			{%- if block.settings.widget -%}
				<div class="menu-row__col menu-row__col--{{ block.settings.banner_col }}">
					{%- if block.settings.banner == 'image' -%}
						<div class="megamenu-banner">
							<a href="{{ block.settings.banner_link }}">
								{%- if block.settings.image -%}
									<img class="img-fluid" alt="{{ block.settings.image.alt | default: shop.name }}" src="{{ block.settings.image | img_url: 'master' }}" />
								{%- else -%}
									{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
								{%- endif -%}
							</a>
							{%- if block.settings.banner_title -%}
								<h2 class="title">{{ block.settings.banner_title }}</h2>
							{%- endif -%}
							{%- if block.settings.banner_subtitle -%}
								<div class="subtitle">{{ block.settings.banner_subtitle }}</div>
							{%- endif -%}
							{%- if block.settings.banner_button -%}
								<a class="button" href="{{ block.settings.banner_link }}">{{ block.settings.banner_button }}</a>
							{%- endif -%}
						</div>
					{%- endif -%}
					{%- if block.settings.banner == 'blog' -%}
						<div class="megamenu-blog">
							{% for article in block.settings.blog_widget.articles limit: 3 %}
								<div class="featured-blog__post">
									<div class="article__image">
										<a class="article__featured-image-link" href="{{ article.url }}">
											{% assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
											<img src="{{ article.image | img_url: '300x300' }}" alt="{{ article.title | escape }}">
										</a>
									</div>
									<div class="article__content">
										<h2 class="article__heading">
											<a class="article__heading-link" href="{{ article.url }}">{{ article.title }}</a>
										</h2>
										<div class="meta">
											<span class="article__meta-date"><time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}" class="date">{{ article.published_at | date: format: 'date' }}</time></span>
											<span class="article__meta-author">{{ article.author }}</span>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					{%- endif -%}
					{%- if block.settings.banner == 'product' -%}
						<div class="megamenu-product">
							{%- if block.settings.banner_title -%}
								<h2 class="title">{{ block.settings.banner_title }}</h2>
							{%- endif -%}
							<div class="wpbingo-section__content bwp_slider-carousel">
								<div class="js-carousel slick-carousel" data-nav="false"
									data-columns="2"
									data-column1440="2"
									data-column1="2"
									data-column2="2"
									data-column3="1"
									data-column4="1">
									{%- for product in collections[block.settings.collection_widget].products limit: 3 -%}
										<div class="slick-carousel__item">
											{% include 'product-grid-item' %}
										</div>
									{%- endfor -%}
								</div>
							</div>
						</div>
					{%- endif -%}
				</div>
			{%- endif -%}
		</div>
	</div>
</li>
